#include <stdio.h>

int main()
{
    int m, n;
    printf("Digite o numero de linhas e colunas de uma matriz quadrada:\n");
    scanf("%d %d", &m, &n);

    while(m != n)
    {
        printf("A matriz deve ser quadrada, ou seja, mesmo numero de linhas e colunas!");
        printf("Digite o n√∫mero de linhas e colunas de uma matriz quadrada:\n");
        scanf("%d %d", &m, &n);
    }

    int matriz[m][n];
    
    printf("Digite os valores da matriz seguindo a ordem da primeira para a ultima linha e separados por espaco:\n");
    for(int i=0; i<m; i++)
    {
        for(int j=0; j<n; j++)
        {
            scanf("%d", &matriz[i][j]);
        }
    }

    int somaprincipal=0;

    for(int i=0; i<m; i++)
    {
        somaprincipal = somaprincipal + matriz[i][i];
    }

    printf("A soma dos elementos da diagonal principal = %d\n", somaprincipal);

    return 0;
}
