//Calcular a área de um retângulo a partir dos valores do comprimento e da largura inseridos pelo usuário

#include <stdio.h>

int main()
{
    //declaração das variáveis e verificação dos valores digitados pelo usuário
    float c, l;

    printf("Digite o valor do comprimento do retangulo: \n");
    scanf("%f", &c);
    while(c<0)
    {
        printf("Digite um numero valido!\n");
        printf("Digite o valor do comprimento do retangulo: \n");
        scanf("%f", &c);
    }
    printf("Digite o valor da largura do retangulo: \n");
    scanf("%f", &l);
    while(l<0)
    {
        printf("Digite um numero valido!\n");
        printf("Digite o valor da largura do retangulo: \n");
        scanf("%f", &l);
    }

    //calculo da area
    float area;

    area = c * l;

    //resultado do programa
    printf("Area do retangulo = %.2f\n", area);

    return 0;
}
